<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.vu.lifetag"
    android:versionCode="20120828"
    android:versionName="1.1.0" >

    <uses-feature
        android:name="android.hardware.location.gps"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.microphone"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.wifi"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.bluetooth"
        android:required="true" />
    <!-- implied by permission PROCESS OUTGOING_CALLS, but not required -->
    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />
    <!-- implied by permission CAMERA, but not required -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <!-- implied by permission NFC, but not required -->
    <uses-feature
        android:name="android.hardware.nfc"
        android:required="false" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- Permission to received pushed message -->
    <permission
        android:name="nl.sense_os.app.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="nl.sense_os.app.permission.C2D_MESSAGE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="11" />

    <application
        android:icon="@drawable/ic_launcher_lifetag"
        android:label="@string/sense_app_name"
        android:logo="@drawable/ic_logo_lifetag"
        android:theme="@style/Sense.Rings" >

        <!-- COMPONENTS OF SENSE PLATFORM FRONT-END -->
        <activity
            android:name="nl.sense_os.app.SenseApp"
            android:configChanges="orientation"
            android:label="@string/sense_app_label" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="nl.vu.lifetag.SenseApp" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="nl.sense_os.app.login.LoginActivity"
            android:configChanges="orientation"
            android:label="@string/sense_app_label"
            android:theme="@style/Sense.Dialog" />
        <activity
            android:name="nl.sense_os.app.register.RegisterActivity"
            android:configChanges="orientation"
            android:label="@string/sense_app_label"
            android:theme="@style/Sense.Dialog" />
        <activity
            android:name="nl.sense_os.app.SenseSettings"
            android:configChanges="orientation"
            android:label="@string/sense_app_label"
            android:theme="@style/Sense.Prefs" />

        <service
            android:name="nl.sense_os.app.appwidget.SenseWidgetUpdater"
            android:exported="false" >
            <intent-filter>
                <action android:name="nl.vu.lifetag.AppWidgetUpdate" />
                <action android:name="nl.vu.lifetag.StartPhoneState" />
                <action android:name="nl.vu.lifetag.StopPhoneState" />
                <action android:name="nl.vu.lifetag.StartLocation" />
                <action android:name="nl.vu.lifetag.StopLocation" />
                <action android:name="nl.vu.lifetag.StartMotion" />
                <action android:name="nl.vu.lifetag.StopMotion" />
                <action android:name="nl.vu.lifetag.StartAmbience" />
                <action android:name="nl.vu.lifetag.StopAmbience" />
                <action android:name="nl.vu.lifetag.StartDevices" />
                <action android:name="nl.vu.lifetag.StopDevices" />
            </intent-filter>
        </service>

        <receiver
            android:label="@string/sense_service_station"
            android:name="nl.sense_os.app.appwidget.SenseWidgetProvider"
            android:exported="false" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_provider_info" />
        </receiver>

        <!-- COMPONENTS OF GENERIC SENSE PLATFORM -->
        <service
            android:name="nl.sense_os.service.SenseService"
            android:exported="false" >
            <intent-filter>
                <action android:name="nl.vu.lifetag.SenseService" />
            </intent-filter>
        </service>
        <service
            android:name="nl.sense_os.service.MsgHandler"
            android:exported="false" >
            <intent-filter>
                <action android:name="nl.vu.lifetag.MsgHandler.NEW_DATA" />
                <action android:name="nl.vu.lifetag.MsgHandler.SEND_DATA" />
            </intent-filter>
        </service>
        <service android:name="nl.sense_os.service.commonsense.DefaultSensorRegistrationService" />
        <service android:name="nl.sense_os.service.states.EpiStateMonitor" />
        <service android:name="nl.sense_os.service.push.GCMReceiver" />
        <service android:name="nl.sense_os.service.configuration.ConfigurationService" />

        <activity
            android:name="nl.sense_os.service.deviceprox.NfcScan"
            android:configChanges="orientation"
            android:exported="false"
            android:theme="@style/Sense.Dialog" >
            <intent-filter>
                <action android:name="android.nfc.action.TECH_DISCOVERED" />
            </intent-filter>

            <meta-data
                android:name="android.nfc.action.TECH_DISCOVERED"
                android:resource="@xml/nfc" />
        </activity>

        <receiver
            android:name="nl.sense_os.service.BootRx"
            android:exported="false" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />

                <category android:name="android.intent.category.HOME" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="nl.sense_os.service.AliveChecker"
            android:exported="false" >
            <intent-filter>
                <action android:name="nl.vu.lifetag.AliveCheck" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="nl.sense_os.service.NetworkMonitor"
            android:exported="false" >
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="nl.sense_os.service.DataTransmitter"
            android:exported="false" >
            <intent-filter>
                <action android:name="nl.vu.lifetag.DataTransmit" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="nl.sense_os.service.push.GCMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >

            <!-- Receive the message -->
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="nl.sense_os.app" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="nl.sense_os.service.configuration.RequirementReceiver"
            android:exported="false" >
            <intent-filter>
                <action android:name="nl.sense_os.service.push.got_requirement" />
            </intent-filter>
        </receiver>

        <provider
            android:name="nl.sense_os.service.provider.SensorDataProvider"
            android:authorities="nl.vu.lifetag.provider.LocalStorage"
            android:exported="true" />

        <!-- COMPONENTS FOR BADGE AND TAG SYSTEM -->

        <!-- app widget dialog activity for life tag widget -->
        <activity
            android:name="nl.sense_os.app.appwidget.LifeTagWidget$Receiver"
            android:configChanges="orientation"
            android:theme="@style/Sense.Dialog" />

        <!-- app widget provider for life tag widget -->
        <receiver android:name="nl.sense_os.app.appwidget.LifeTagWidget$Provider"
            android:exported="false"
            android:label="@string/label_lifetag">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/lifetag_provider_info" />
        </receiver>

        <activity
            android:name="nl.sense_os.app.tags.TagsActivity"
            android:configChanges="orientation"
            android:exported="false" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="nl.sense_os.app.tags.TagsCalendar"
            android:exported="false" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="nl.sense_os.app.badges.BadgesActivity"
            android:configChanges="orientation"
            android:exported="false" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>