<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lifetag_button_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:clickable="true"
    android:focusable="true"
    android:layout_margin="5sp"
    android:background="@drawable/appwidget_bg_clickable">

    <ImageView
        android:id="@+id/lifetag_button"
        android:layout_width="48sp"
        android:layout_height="48sp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:maxHeight="48dp"
        android:maxWidth="48dp"
        android:src="@drawable/lifetag_unknown"
        android:contentDescription="@string/content_descr_item_image" />

    <TextView
        android:id="@+id/mood_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="@android:attr/textAppearanceLarge"
        android:text="@string/tag_lifetag_other" >
    </TextView>

</LinearLayout>
